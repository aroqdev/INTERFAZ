{% extends 'base.html.twig' %}

{% block body %}
<style>
    .card {
        height: 100%; /* ðŸ”¹ Todas las tarjetas tendrÃ¡n el mismo tamaÃ±o */
        display: flex;
        flex-direction: column;
    }

    .card-body {
        flex-grow: 1; /* ðŸ”¹ Permite que el contenido se distribuya uniformemente */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-img-top {
        height: 220px; /* ðŸ”¹ TamaÃ±o uniforme de imÃ¡genes */
        object-fit: cover; /* ðŸ”¹ Ajusta la imagen sin deformarla */
        border-bottom: 2px solid #ddd; /* ðŸ”¹ SeparaciÃ³n visual */
    }

    .card-footer {
        margin-top: auto; /* ðŸ”¹ Mantiene el footer en la parte inferior */
    }

    /* ðŸ”¹ Mejorar el texto de la oferta */
    .badge.bg-danger {
        font-size: 0.9rem;
        padding: 5px 10px;
        border-radius: 5px;
    }
</style>

<script>
    function actualizarTotal(id, precio) {
        let cantidad = document.getElementById("cantidad_" + id).value;
        let totalElement = document.getElementById("total_" + id);
        let total = (cantidad * precio).toFixed(2); // ðŸ”¹ Solo 2 decimales

        if (cantidad > 1) {
            totalElement.innerHTML = `<i class="fas fa-coins"></i> Total: ${total}â‚¬`;
            totalElement.style.display = "block";
        } else {
            totalElement.style.display = "none";
        }
    }
</script>

<div class="container mt-4">
    <div class="row">
        <!-- ðŸ”¹ Barra lateral de categorÃ­as -->
        <div class="col-md-3">
            <div class="list-group">
                {% for cat in categorias %}
                    <a href="{{ path('category_products', {'id': cat.id}) }}" 
                       class="list-group-item list-group-item-action {% if cat.id == categoria.id %}active{% endif %}">
                        <i class="fas fa-tags"></i> {{ cat.nombre }}
                    </a>
                {% endfor %}
            </div>
        </div>

        <!-- ðŸ”¹ Productos filtrados -->
        <div class="col-md-9">
            <h2 class="text-white mb-4"><i class="fas fa-boxes"></i> Productos en {{ categoria.nombre }}</h2>

            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} fade show">
                        <i class="fas fa-exclamation-circle"></i> {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="row">
                {% for producto in productos %}
                    <div class="col-md-4">
                        <div class="card shadow">
                            <a href="{{ path('product_details', {'id': producto.id}) }}" class="text-decoration-none text-dark">
                                <img src="{{ producto.imagen }}" class="card-img-top" alt="{{ producto.nombre }}">
                                <div class="card-body">
                                    {% if producto.oferta %}
                                        <span class="badge bg-danger text-white mb-2"><i class="fas fa-tags"></i> Â¡EN OFERTA!</span>
                                    {% endif %}
                                    <h5 class="card-title"><i class="fas fa-box-open"></i> {{ producto.nombre }}</h5>
                                    <p class="card-text"><i class="fas fa-info-circle"></i> {{ producto.descripcion }}</p>
                                    <p class="fw-bold text-danger">
                                        {% if producto.oferta %}
                                            <span class="text-decoration-line-through"><i class="fas fa-euro-sign"></i> {{ producto.precioAnterior }}â‚¬</span>
                                        {% endif %}
                                        <i class="fas fa-tag"></i> {{ producto.precio }}â‚¬
                                    </p>
                                    {% if producto.cantidad > 0 %}
                                        <p class="fw-bold text-success"><i class="fas fa-check-circle"></i> DISPONIBLE</p>
                                    {% else %}
                                        <p class="fw-bold text-danger"><i class="fas fa-times-circle"></i> NO DISPONIBLE</p>
                                    {% endif %}
                                </div>
                            </a>
                            {% if app.user %}
                                <div class="card-footer text-center">
                                    {% if producto.cantidad > 0 %}
                                        <form method="post" action="{{ path('add_cart', {'id': producto.id}) }}">
                                            <label for="cantidad_{{ producto.id }}" class="fw-bold"><i class="fas fa-boxes"></i> Cantidad:</label>
                                            <input type="number" id="cantidad_{{ producto.id }}" name="cantidad" class="form-control"
                                                min="1" max="{{ producto.cantidad }}" value="1" 
                                                oninput="actualizarTotal('{{ producto.id }}', {{ producto.precio }})">

                                            <!-- ðŸ”¹ Elemento que muestra el total con 2 decimales -->
                                            <p id="total_{{ producto.id }}" class="fw-bold text-success mt-2" style="display: none;"></p>
                                            
                                            <button type="submit" class="btn btn-primary mt-2 w-100">
                                                <i class="fas fa-shopping-cart"></i> AÃ±adir al carrito
                                            </button>
                                        </form>
                                    {% else %}
                                        <button class="btn btn-secondary mt-2 w-100" disabled>
                                            <i class="fas fa-ban"></i> No disponible
                                        </button>
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% else %}
                <p class="text-center text-secondary"><i class="fas fa-times-circle"></i> No hay productos en esta categorÃ­a.</p>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
