{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow animate-fade-in">
                <div class="card-body">
                    <h2 class="text-center mb-4"><i class="fas fa-credit-card"></i> Agregar Tarjeta de Cr√©dito/D√©bito</h2>

                    <!-- üîπ Mensajes Flash -->
                    {% for type, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type }} fade show">
                                <i class="fas fa-exclamation-circle"></i> {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {{ form_start(form) }}

                    <!-- üîπ Campos de tarjeta de cr√©dito -->
                    <div id="tarjeta-fields">
                        <div class="mb-3 animate-input col-md-12">
                            <label for="nombre_titular" class="form-label"><i class="fas fa-user"></i> Nombre del Titular:</label>
                            {{ form_widget(form.nombre_titular, {'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="mb-3 animate-input col-md-12">
                            <label for="numero_tarjeta" class="form-label"><i class="fas fa-credit-card"></i> N√∫mero de Tarjeta:</label>
                            {{ form_widget(form.numero_tarjeta, {'attr': {'class': 'form-control', 'autocomplete': 'off'} }) }}
                        </div>
                        <div class="mb-3 animate-input col-md-12">
                            <label for="fecha_vencimiento" class="form-label"><i class="fas fa-calendar-alt"></i> Fecha de Vencimiento:</label>
                            {{ form_widget(form.fecha_vencimiento, {'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="mb-3 animate-input col-md-12">
                            <label for="cvv" class="form-label"><i class="fas fa-key"></i> CVV:</label>
                            {{ form_widget(form.cvv, {'attr': {'class': 'form-control', 'autocomplete': 'off'} }) }}
                        </div>
                    </div>

                    <div class="mb-3 animate-input">
                        {{ form_widget(form.activo, {'attr': {'class': 'form-check-input'} }) }}
                        <label for="{{ form.activo.vars.id }}" class="form-check-label">
                            <i class="fas fa-money-check-alt"></i> Establecer como m√©todo de pago predeterminado
                        </label>
                    </div>

                    <button type="submit" class="btn btn-success w-100 animate-hover">
                        <i class="fas fa-save"></i> Guardar Tarjeta
                    </button>
                    {{ form_end(form) }}

                    <div class="text-center mt-3">
                        <a href="{{ path('profile_payments') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a M√©todos de Pago
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
