{% extends "user/index.html.twig" %}

{% block profile_content %}
<h3 class="text-primary"><i class="fas fa-user-edit"></i> Modificar datos</h3>

{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ type }} fade show">
            <i class="fas fa-exclamation-circle"></i> {{ message }}
        </div>
    {% endfor %}
{% endfor %}

{{ form_start(form) }}
    <div class="mb-3 animate-input">
        <label for="nombre" class="form-label"><i class="fas fa-user"></i> Nombre:</label>
        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="mb-3 animate-input">
        <label for="apellido" class="form-label"><i class="fas fa-user"></i> Apellido:</label>
        {{ form_widget(form.apellido, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="mb-3 animate-input">
        <label for="email" class="form-label"><i class="fas fa-envelope"></i> Correo electrónico:</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="mb-3 animate-input">
        <label for="password"><i class="fas fa-key"></i> Nueva Contraseña (dejar en blanco si no se cambia):</label>
        {{ form_widget(form.password, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="mb-3 animate-input">
        <label for="codigo_pais" class="form-label"><i class="fas fa-globe"></i> Código País:</label>
        {{ form_widget(form.codigo_pais, {'attr': {'class': 'form-select'} }) }}  
    </div>

    <div class="mb-3 animate-input">
        <label for="telefono" class="form-label"><i class="fas fa-phone"></i> Teléfono:</label>
        {{ form_widget(form.telefono, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese solo números'} }) }}
    </div>

    <div class="mb-3 animate-input">
        <label for="roles" class="form-label"><i class="fas fa-user-shield"></i> Rol de usuario:</label>
        {{ form_widget(form.roles, {'attr': {'class': 'form-select'} }) }}
    </div>

    <button type="submit" class="btn btn-primary w-100 animate-hover">
        <i class="fas fa-save"></i> Guardar cambios
    </button>
{{ form_end(form) }}
{% endblock %}
