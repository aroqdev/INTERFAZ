{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow animate-fade-in">
                <div class="card-body">
                    <h2 class="text-center mb-4"><i class="fas fa-map-marker-alt"></i> Modificar Dirección</h2>

                    <!-- 🔹 Mensajes Flash -->
                    {% for type, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type }} fade show">
                                <i class="fas fa-exclamation-circle"></i> {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <!-- 🔹 Formulario -->
                    {{ form_start(form) }}
                        <div class="mb-3 animate-input">
                            <label for="ciudad" class="form-label"><i class="fas fa-city"></i> Ciudad:</label>
                            {{ form_widget(form.ciudad, {'attr': {'class': 'form-control', 'placeholder': 'Ejemplo: Madrid, Barcelona'}}) }}
                        </div>

                        <div class="mb-3 animate-input">
                            <label for="calle" class="form-label"><i class="fas fa-road"></i> Calle:</label>
                            {{ form_widget(form.calle, {'attr': {'class': 'form-control', 'placeholder': 'Ejemplo: Calle Mayor'}}) }}
                        </div>

                        <div class="mb-3 animate-input">
                            <label for="numero" class="form-label"><i class="fas fa-home"></i> Número:</label>
                            {{ form_widget(form.numero, {'attr': {'class': 'form-control', 'placeholder': 'Ejemplo: 123'}}) }}
                        </div>

                        <div class="mb-3 animate-input">
                            <label for="piso" class="form-label"><i class="fas fa-building"></i> Piso:</label>
                            {{ form_widget(form.piso, {'attr': {'class': 'form-control', 'placeholder': 'Ejemplo: 2B'}}) }}
                        </div>

                        <div class="mb-3 animate-input">
                            <label for="codigo_postal" class="form-label"><i class="fas fa-mail-bulk"></i> Código Postal:</label>
                            {{ form_widget(form.codigo_postal, {'attr': {'class': 'form-control', 'placeholder': 'Ejemplo: 28001'}}) }}
                        </div>

                        <div class="mb-3 animate-input">
                            {{ form_widget(form.activo, {'attr': {'class': 'form-check-input'}}) }}
                            <label for="{{ form.activo.vars.id }}" class="form-check-label">
                                <i class="fas fa-map-pin"></i> Establecer como dirección predeterminada
                            </label>
                        </div>

                        <button type="submit" class="btn btn-warning w-100 animate-hover">
                            <i class="fas fa-save"></i> Actualizar Dirección
                        </button>
                    {{ form_end(form) }}

                    <div class="text-center mt-3">
                        <a href="{{ path('profile_addresses') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a Mis Direcciones
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
