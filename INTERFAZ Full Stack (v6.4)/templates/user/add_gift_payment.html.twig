{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow animate-fade-in">
                <div class="card-body">
                    <h2 class="text-center mb-4"><i class="fas fa-gift"></i> Agregar Tarjeta Regalo</h2>

                    <!-- üîπ Mensajes Flash -->
                    {% for type, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type }} fade show">
                                <i class="fas fa-exclamation-circle"></i> {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {{ form_start(form) }}

                    <!-- üîπ Campo de tarjeta regalo -->
                    <div class="mb-3 animate-input">
                        <label for="regalo" class="form-label"><i class="fas fa-credit-card"></i> C√≥digo de Tarjeta Regalo:</label>
                        {{ form_widget(form.regalo, {'attr': {'class': 'form-control', 'autocomplete': 'off'} }) }}
                    </div>

                    <div class="mb-3 animate-input">
                        {{ form_widget(form.activo, {'attr': {'class': 'form-check-input'} }) }}
                        <label for="{{ form.activo.vars.id }}" class="form-check-label">
                            <i class="fas fa-money-check-alt"></i> Establecer como m√©todo de pago predeterminado
                        </label>
                    </div>

                    <button type="submit" class="btn btn-success w-100 animate-hover">
                        <i class="fas fa-save"></i> Guardar Tarjeta Regalo
                    </button>
                    {{ form_end(form) }}

                    <div class="text-center mt-3">
                        <a href="{{ path('profile_payments') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a M√©todos de Pago
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
