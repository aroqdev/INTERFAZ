{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow animate-fade-in"> <!-- üîπ Aplicamos fade-in -->
                <div class="card-body">
                    <h2 class="text-center mb-4"><i class="fas fa-edit"></i> Editar Categor√≠a</h2>

                    <!-- üîπ Mensajes Flash -->
                    {% for type, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type }} fade show">
                                <i class="fas fa-exclamation-circle"></i> {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <!-- üîπ Formulario -->
                    {{ form_start(form) }}
                        <div class="mb-3 animate-input">
                            <label for="imagen" class="form-label"><i class="fas fa-image"></i> Imagen:</label>
                            {{ form_widget(form.imagen, {'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="mb-3 animate-input">
                            <label for="nombre" class="form-label"><i class="fas fa-tag"></i> Nombre de la categor√≠a:</label>
                            {{ form_widget(form.nombre, {'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="mb-3 animate-input">
                            <label for="descripcion" class="form-label"><i class="fas fa-info-circle"></i> Descripci√≥n:</label>
                            {{ form_widget(form.descripcion, {'attr': {'class': 'form-control'} }) }}
                        </div>

                        <button type="submit" class="btn btn-warning w-100 animate-hover">
                            <i class="fas fa-save"></i> Actualizar Categor√≠a
                        </button>
                    {{ form_end(form) }}

                    <div class="text-center mt-3">
                        <a href="{{ path('admin_categories') }}" class="btn btn-secondary animate-hover">
                            <i class="fas fa-arrow-left"></i> Volver a Categor√≠as
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
