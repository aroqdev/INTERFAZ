                    <p class="fs-3 fw-bold text-primary">{{ totalUsuarios }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow text-center">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-box-open"></i> Productos Activos</h5>
                    <p class="fs-3 fw-bold text-success">{{ totalProductos }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow text-center">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-shopping-bag"></i> Ventas Totales</h5>
                    <p class="fs-3 fw-bold text-danger">{{ totalVentas }}‚Ç¨</p>
                </div>
            </div>
        </div>
    </div>

    <!-- üîπ Accesos r√°pidos como tarjetas horizontales -->
