{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <!-- 🔹 Barra lateral de navegación -->
        <div class="col-md-3">
            <div class="card shadow bg-dark text-white">
                <div class="card-body text-center">
                    <h4 class="fw-bold"><i class="fas fa-user"></i> {{ app.user.nombre }} {{ app.user.apellido }}</h4>
                    <p class="text-white"><i class="fas fa-envelope"></i> {{ app.user.email }}</p>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-danger w-100">
                        <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                    </a>
                </div>
            </div>

            <div class="list-group mt-3 shadow">
                <a href="{{ path('admin_dashboard') }}" class="list-group-item list-group-item-action {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}">
                    <i class="fas fa-chart-line"></i> Panel de Control
                </a>
                <a href="{{ path('admin_users') }}" class="list-group-item list-group-item-action {% if app.request.get('_route') == 'admin_users' %}active{% endif %}">
                    <i class="fas fa-users"></i> Gestión de Usuarios
                </a>
                <a href="{{ path('admin_categories') }}" class="list-group-item list-group-item-action {% if app.request.get('_route') == 'admin_categories' %}active{% endif %}">
                    <i class="fas fa-folder-open"></i> Gestión de Categorías
                </a>
                <a href="{{ path('admin_products') }}" class="list-group-item list-group-item-action {% if app.request.get('_route') == 'admin_products' %}active{% endif %}">
                    <i class="fas fa-box-open"></i> Gestión de Productos
                </a>
            </div>
        </div>

        <!-- 🔹 Contenido dinámico -->
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-body">
                    {% block admin_content %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
