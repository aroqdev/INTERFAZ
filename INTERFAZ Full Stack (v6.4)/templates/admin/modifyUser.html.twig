{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow animate-fade-in"> <!-- üîπ Aplicamos fade-in -->
                <div class="card-body">
                    <h2 class="text-center mb-4"><i class="fas fa-user-edit"></i> Modificar Usuario</h2>
                    
                    <p class="text-center"><strong><i class="fas fa-envelope"></i> Modificando a:</strong> <span class="animate-highlight">{{ user.email }}</span></p>

                    {% for type, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type }} fade show">
                                <i class="fas fa-exclamation-circle"></i> {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    
                    {{ form_start(form) }}
                        <div class="mb-3 animate-input">
                            <label for="nombre" class="form-label"><i class="fas fa-user"></i> Nombre:</label>
                            {{ form_widget(form.nombre, {'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="mb-3 animate-input">
                            <label for="apellido" class="form-label"><i class="fas fa-user"></i> Apellido:</label>
                            {{ form_widget(form.apellido, {'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="mb-3 animate-input">
                            <label for="email" class="form-label"><i class="fas fa-envelope"></i> Correo electr√≥nico:</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="mb-3 animate-input">
                            <label for="password"><i class="fas fa-key"></i> Nueva Contrase√±a (dejar en blanco si no se cambia):</label>
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="mb-3 animate-input">
                            <label for="codigo_pais" class="form-label"><i class="fas fa-globe"></i> C√≥digo Pa√≠s:</label>
                            {{ form_widget(form.codigo_pais, {'attr': {'class': 'form-select'} }) }}  
                        </div>

                        <div class="mb-3 animate-input">
                            <label for="telefono" class="form-label"><i class="fas fa-phone"></i> Tel√©fono:</label>
                            {{ form_widget(form.telefono, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese solo n√∫meros'} }) }}
                        </div>

                        <div class="mb-3 animate-input">
                            <label for="roles" class="form-label"><i class="fas fa-user-shield"></i> Rol de usuario:</label>
                            {{ form_widget(form.roles, {'attr': {'class': 'form-select'} }) }}
                        </div>

                        <button type="submit" class="btn btn-warning w-100 animate-hover">
                            <i class="fas fa-save"></i> Guardar cambios
                        </button>
                    {{ form_end(form) }}

                    <div class="text-center mt-3">
                        <a href="{{ path('admin_users') }}" class="btn btn-secondary animate-hover">
                            <i class="fas fa-arrow-left"></i> Volver al Panel de Administraci√≥n
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
